<?xml version="1.0" encoding="UTF-8"?>
<Node>
    <Option>
      <Band>
          <BDR Description="BDR measurement switcher, if checkbox is enabled, measurement will be performed or not" Control="CheckBox">1</BDR>
          <EDR Description="EDR measurement switcher, if checkbox is enabled, measurement will be performed or not" Control="CheckBox">1</EDR>
          <BLE Description="BLE measurement switcher, if checkbox is enabled, measurement will be performed or not" Control="CheckBox">1</BLE>
      </Band>
    </Option>
    <Param>
        <TimeOut >
            <WaitTime Description="Unit: millisecond">60000</WaitTime>
            <CmdSleep Description="Unit: millisecond">3000</CmdSleep>
        </TimeOut>
        <BDR Description="BDR" Control="Group">
           <GroupCount>1</GroupCount>
            <Group1>
                <TCH Description="Transmit channel 0~78 is available">0,39,78</TCH>
                <PacketType Description="Different packet type with differrent packet length, the matching map is DH1,DH3,DH5" Control="ComboBox" Elements="DH1,DH3,DH5">DH5</PacketType>
                <RXLVL Description="Rx level for per measurement. Unit:dBm">-65</RXLVL>
                <RefLVL Description="Reference level for tx measure. Unit:dBm">5</RefLVL>
                <RxCount Description="Total bits count for RX configuration!">816800</RxCount>
                <TestItem>
                    <TXP Description="Output power" Control="CheckBox">1</TXP>
                    <TSBD Description="Tx output spectrum - 20dB Bandwidth" Control="CheckBox">1</TSBD>
                    <TSACP Description="Tx output spectrum - Adjacent Channel Power" Control="CheckBox">1</TSACP>
                    <MOD Description="Modulation Characteristics" Control="CheckBox">1</MOD>
                    <ICFT Description="Initial Carrier Frequency Tolerance" Control="CheckBox">1</ICFT>
                    <CFD Description="Carrier Frequency Drift" Control="CheckBox">1</CFD>
                    <BER Description="Receiver sensitivity" Control="CheckBox">1</BER>
                  <RSSI Description="Received Signal Strength Indicator" Control="CheckBox">0</RSSI>
                </TestItem>
            </Group1>
            <Specification Description="Configure the test tolerance and specification">
                <TXP Description="TX Power, Unit: dBm">
                    <TXP>2,12</TXP>
                </TXP>
                <TSBD Description="Tx output spectrum - 20dB Bandwidth:Uint KHz">
			        <TSBD>-1000,1000</TSBD>
                </TSBD>
                <TSACP Description="Tx output spectrum - Adjacent Channel Power">
			        <TSACP>-40,-40,-40,-20,99,99,99,-20,-40,-40,-40</TSACP>
                </TSACP>
                <MOD Description="Modulation Characteristics">
                    <f1avg>140,175</f1avg>
                    <f2max>115</f2max>
                    <ratio>0.8</ratio>
                </MOD>
                <ICFT Description="Initial Carrier Frequency Tolerance">
                    <ICFT>-75,75</ICFT>
                </ICFT>
                <CFD Description="Carrier Frequency Drift">
                    <CFD>-40,40</CFD>
                </CFD>
                <BER Description="Receiver sensitivity">
                    <BER>0.1</BER>
                </BER>
              <RSSI Description="Received Signal Strength Indicator.RXLVL+/-Limit">
                <RSSI>-5,5</RSSI>
                </RSSI>              
            </Specification>
        </BDR>
        <EDR Description="EDR Band" Control="Group">
          <GroupCount>2 </GroupCount>
            <Group1>
                <TCH Description="Transmit channel 0~78 is available">0,39,78</TCH>
                <PacketType Description="Different packet type with different packet length, the matching map is 2-DH1,2-DH3,2-DH5,3-DH1,3-DH3,3-DH5" Control="ComboBox" Elements="2-DH1,2-DH3,2-DH5,3-DH1,3-DH3,3-DH5">2-DH5</PacketType>
                <RXLVL Description="Rx level for per measurement. Unit:dBm">-65</RXLVL>
                <RefLVL Description="Reference level for tx measure. Unit:dBm">10</RefLVL>
                <RxCount Description="Total bits count for RX configuration!">816800</RxCount>
                <TestItem>
                    <TXP Description="Output power" Control="CheckBox">1</TXP>
                    <RTXP Description="Relative Transmit Power" Control="CheckBox">1</RTXP>
                    <CFDMODA Description="Carrier Frequency drift and modulation Accuracy" Control="CheckBox">1</CFDMODA>
                    <IBSE Description="In-Band Spurious Emmissons" Control="CheckBox">1</IBSE>
                    <BER Description="Receiver sensitivity" Control="CheckBox">1</BER>
                    <RSSI Description="Received Signal Strength Indicator" Control="CheckBox">0</RSSI>                  
                </TestItem>
            </Group1>
          <Group2>
            <TCH Description="Transmit channel 0~78 is available">0,39,78</TCH>
            <PacketType Description="Different packet type with differrent packet length, the matching map is 2-DH1,2-DH3,2-DH5,3-DH1,3-DH3,3-DH5" Control="ComboBox" Elements="2-DH1,2-DH3,2-DH5,3-DH1,3-DH3,3-DH5">3-DH5</PacketType>
            <RXLVL Description="Rx level for per measurement. Unit:dBm">-65</RXLVL>
            <RefLVL Description="Reference level for tx measure. Unit:dBm">10</RefLVL>
            <RxCount Description="Total bits count for RX configuration!">816800</RxCount>
            <TestItem>
              <TXP Description="Output power" Control="CheckBox">1</TXP>
              <RTXP Description="Relative Transmit Power" Control="CheckBox">1</RTXP>
              <CFDMODA Description="Carrier Frequency drift and modulation Accurancy" Control="CheckBox">1</CFDMODA>
              <IBSE Description="In-Band Spurious Emmisons" Control="CheckBox">1</IBSE>
              <BER Description="Receiver sensitivity" Control="CheckBox">1</BER>
              <RSSI Description="Received Signal Strength Indicator" Control="CheckBox">0</RSSI>              
            </TestItem>
          </Group2>
            <Specification Description="Configure the test tolerance and specification">
                <TXP Description="TX Power, Unit: dBm">
                    <TXP>2,12</TXP>
                </TXP>
                <RTXP Description="Relative Transmit Power">
				          <RTXP>-4,1</RTXP>
                </RTXP>
                <CFDMODA Description="Carrier Frequency drift and modulation Accurancy">
                    <w0>-10,10</w0>
                    <wi>-75,75</wi>
                    <RMSDEVM_2DHX>0.2</RMSDEVM_2DHX>
                    <PEAKDEVM_2DHX>0.35</PEAKDEVM_2DHX>
                    <P99DEVM_2DHX>0.30</P99DEVM_2DHX>                  
                    <RMSDEVM_3DHX>0.13</RMSDEVM_3DHX>
                    <PEAKDEVM_3DHX>0.25</PEAKDEVM_3DHX>
                    <P99DEVM_3DHX>0.25</P99DEVM_3DHX>
                </CFDMODA>
                <IBSE Description="In-Band Spurious Emmisons">
                    <IBSE>-40,-40,-40,-20,-26,99,-26,-20,-40,-40,-40</IBSE>
                </IBSE>
                <BER Description="Receiver sensitivity">
                    <BER>0.01</BER>
                </BER>
                <RSSI Description="Received Signal Strength Indicator.RXLVL+/-Limit">
                  <RSSI>-5,5</RSSI>
                </RSSI>
            </Specification>
        </EDR>
        <BLE Description="BLE Band" Control="Group">
          <GroupCount>1</GroupCount>
            <Group1>
                <TCH Description="Transmit channel 0~38 is available">0,19,38</TCH>
                <PacketType Description="Packet type" Control="ComboBox" Elements="BLE_RF_PHY_TEST_REF">BLE_RF_PHY_TEST_REF</PacketType>
                <RXLVL Description="Rx level for per measurement. Unit:dBm">-65</RXLVL>
                <RefLVL Description="Reference level for tx measure. Unit:dBm">5</RefLVL>
                <RxCount Description="Total packets count for RX configuration!">200</RxCount>
                <TestItem>
                    <TXP Description="Output power" Control="CheckBox">1</TXP>
                    <IBSE Description="In-Band Spurious Emmisons" Control="CheckBox">1</IBSE>
                    <MOD Description="Modulation Characteristics" Control="CheckBox">1</MOD>
                    <CFOD Description="Carrier Frequency Offset and Drift" Control="CheckBox">1</CFOD>
                    <BER Description="Receiver sensitivity" Control="CheckBox">1</BER>
                    <RSSI Description="Received Signal Strength Indicator" Control="CheckBox">0</RSSI>
                </TestItem>
            </Group1>
            <Specification Description="Configure the test tolerance and specification">
                <TXP Description="TX Power, Unit: dBm">
                    <AVG>-20,10</AVG>
		            <PEAK>3</PEAK>
                </TXP>
                <IBSE Description="In-Band Spurious Emmisons">
				    <IBSE>-30,-30,-30,-20,99,99,99,-20,-30,-30,-30</IBSE>
                </IBSE>
                <MOD Description="Modulation Characteristics">
                    <f1avg>225,275</f1avg>
                    <f2max>185</f2max>
                    <ratio>0.8</ratio>
                </MOD>
		        <CFOD Description="Carrier Frequency Offset and Drift">
		            <Fn>-150,150</Fn>
		            <F0Fn>-99,50</F0Fn>
		            <F1F0>-99,23</F1F0>
		            <FnFn5>-99,20</FnFn5>
                </CFOD>
                <BER>
                    <BER>30.8</BER>
                </BER>
              <RSSI Description="Received Signal Strength Indicator.RXLVL+/-Limit">
                <RSSI>-5,5</RSSI>
              </RSSI>              
            </Specification>
        </BLE>
    </Param>
</Node>
